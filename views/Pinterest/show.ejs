<%- include('../partiels/header.ejs') %>
    <%- include('../partiels/nav.ejs') %>

        <div class="w-full min-h-screen bg-zinc-800 pt-1 text-white">
            <div class="cards flex flex-wrap gap-10 px-10 mt-10">
                <% user.posts.forEach((post)=> { %>
                    <div class="card">
                        <div class="w-52 h-40 bg-zinc-200 rounded-md overflow-hidden">
                            <img class="w-full h-full object-cover" src="/images/uploads/<%= post.image %>"
                                alt="">
                        </div>
                        <a href="/show/posts" class="inline-block font-semibold text-xl mt-3"><%= post.postText %></a>
                        <h5 class="text-sm font-medium opacity-60">
                            description Pins
                        </h5>
                    </div>
                    <% }) %>
            </div>
        </div>

        <%- include('../partiels/footer.ejs') %>