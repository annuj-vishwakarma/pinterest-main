<%- include('../partiels/nav.ejs') %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1>Create a New Post.</h1>
    <hr class="opacity-10 mt-3">
    <form action="/upload" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2" type="file" name="file">
        <input class="block w-1/3 px-3 py-2 text-zinc-800 border-2 rounded-md mt-2" type="text" placeholder="title" name="postText">
        <input class="block w-1/3 bg-red-700 px-3 py-2 border-2 rounded-md mt-2" type="submit">
    </form>
</div>

