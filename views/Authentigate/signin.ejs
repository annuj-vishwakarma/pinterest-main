<%- include('../partiels/header.ejs') %>


  <link rel="stylesheet" href="/stylesheets/Authentigate/signin.css">

  <div class="container">
    <div class="content">
      <!--pinterest logo-->
      <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo"
        class="img1" />
      <p class="header">Sign in </p>
      <!-- err -->
      <% if(err){ %>
           <p class="error"><%= err %></p>
      <% } %>
<!--  -->
      <form action="/signin" method="post">

        <input type="text" required placeholder="username" name="username" class="detail" />
        <br />
        <input type="password" required placeholder="Password" name="password" class="detail" />
        <br />

        <a class="forget" href="/forget">Forgot your password?</a>

        <button class="btn int">Sign-in</button>
      </form>
<!--  -->
      <p class="or">OR</p>
      <button class="btn fbk">
        <i class="fab fa-facebook fa-lg" style="color: white; padding-right: 10px"></i><a href="#">Continue with
          Facebook</a></button><br />
      <button class="btn ggl">
        <i class="fab fa-google" style="color: rgb(11, 241, 22); padding-right: 10px"></i><a href="#">Continue with
          Google</a>
      </button>

    </div>
  </div>
  
  <a  href="/"><div class="upbtn">Sign-up</div></a>


<%- include('../partiels/footer.ejs') %>
